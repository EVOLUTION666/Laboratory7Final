<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@drawable/violet_circular_border"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">

        <TextView
            android:id="@+id/mainAdapterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="32dp"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/mainAdapterDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Description"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/mainAdapterCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Count"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/mainAdapterPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Price"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/addToCart"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cart_count"
            android:layout_marginTop="20dp"
            android:text="ADD TO CART"
            android:textColor="@color/white"/>

    </LinearLayout>



</FrameLayout>